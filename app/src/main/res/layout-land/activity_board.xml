<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/BoardOption"
    tools:context=".activity.BoardActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_board"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/md_theme_outline"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,4:6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:backgroundTint="@color/md_theme_onSecondaryFixed"
            app:cardCornerRadius="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/element_board_item" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/board_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/md_theme_surface"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_board"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/md_theme_secondary"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_board"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/board_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:textColor="@color/md_theme_onSecondary"
                tools:text="Board" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_weight="2"
                android:layout_margin="4dp"
                android:text="+"
                android:textColor="@color/md_theme_onPrimary" />

            <Button
                android:id="@+id/rest_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="4dp"
                android:text="-"
                android:textColor="@color/md_theme_onPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_buttom"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cornerRadius="0dp"
                app:iconTint="@color/md_theme_onError"
                app:icon="@drawable/ic_trash" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_buttom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|start"
                app:cornerRadius="0dp"
                android:gravity="center"
                app:iconTint="@color/md_theme_onTertiary"
                app:icon="@drawable/ic_gallery"
                android:text="@string/gallery"
                app:backgroundTint="@color/md_theme_tertiary"

                />

            <Button
                android:id="@+id/new_element_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/md_theme_primary"
                android:text="@string/new_element"
                android:textColor="@color/md_theme_onPrimary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>